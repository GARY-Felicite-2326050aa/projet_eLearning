{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Gestion des Cours</h1>
        <a href="{{ path('admin_course_new') }}"
           class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700">
            Nouveau cours
        </a>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left">Titre</th>
                    <th class="px-6 py-3 text-left">Description</th>
                    <th class="px-6 py-3 text-left">Leçons</th>
                    <th class="px-6 py-3 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y">
                {% for course in courses %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 font-semibold">
                        {{ course.title }}
                    </td>
                    <td class="px-6 py-4 text-gray-600">
                        {{ course.description|slice(0, 80) }}...
                    </td>
                    <td class="px-6 py-4">
                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                            {{ course.lessons|length }} leçons
                        </span>
                    </td>
                    <td class="px-6 py-4 text-right space-x-2">
                        <a href="{{ path('admin_course_edit', {id: course.id}) }}"
                           class="text-blue-600 hover:underline">Éditer</a>
                        <a href="{{ path('admin_course_lessons', {id: course.id}) }}"
                           class="text-green-600 hover:underline">Leçons</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

